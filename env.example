# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application URLs
NEXT_PUBLIC_BASE_URL=https://owlrsvp.com

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Price IDs
NEXT_PUBLIC_STRIPE_BASIC_PRICE_ID=your_stripe_basic_price_id
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=your_stripe_pro_price_id
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID=your_stripe_enterprise_price_id

# Stripe Connect (Optional - for event ticket payments)
# Platform fee percentage (e.g., 2.9 for 2.9% fee per transaction)
# Set to 0 or omit to take no platform fee
STRIPE_PLATFORM_FEE_PERCENT=0

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key

# Environment (development, production)
NODE_ENV=production

# Google AdSense Configuration (Optional - for free tier monetization)
# Get these from https://www.google.com/adsense/
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-5389151790314295
NEXT_PUBLIC_ADSENSE_SLOT_ID=1234567890

# Email Ad Configuration (Optional - for free tier email monetization)
# Note: AdSense doesn't work in emails, so use image-based ads
# Set EMAIL_ADS_ENABLED=true to enable ads in RSVP confirmation emails for free tier
EMAIL_ADS_ENABLED=false
# URL to the ad image (should be hosted publicly accessible)
EMAIL_AD_IMAGE_URL=https://example.com/ad-banner.png
# URL where the ad should link to (defaults to your base URL)
EMAIL_AD_LINK_URL=https://owlrsvp.com
